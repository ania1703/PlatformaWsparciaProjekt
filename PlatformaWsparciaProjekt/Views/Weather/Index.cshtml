@model PlatformaWsparciaProjekt.Models.WeatherInfo

<h2 class="mb-4">🌤 Aktualna Pogoda</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="city" class="form-control" placeholder="Wpisz miasto..." value="@Model.City" />
        <button class="btn btn-primary">Sprawdź</button>
    </div>
</form>

<div class="card shadow-sm p-3">
    <h4>@Model.City</h4>
    <p>Temperatura: <strong>@Model.Temperature°C</strong></p>
    <p>Opis: @Model.Description</p>
    <img src="@Model.IconUrl" alt="Ikona pogody" />
</div>

