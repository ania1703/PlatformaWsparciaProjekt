@model PlatformaWsparciaProjekt.Models.HelpRequest

<h2 class="mb-4">Nowe Zgłoszenie Pomocy</h2>

<form asp-action="Create" method="post" class="card p-4 shadow-sm">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label class="form-label">Tytuł</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kategoria</label>
        <select asp-for="Category" class="form-select">
            <option value="Shopping">Zakupy</option>
            <option value="Companionship">Towarzystwo</option>
            <option value="PetCare">Opieka nad zwierzętami</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Priorytet</label>
        <select asp-for="Priority" class="form-select">
            <option value="High">Wysoki</option>
            <option value="Medium">Średni</option>
            <option value="Low">Niski</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Powiąż z listą zakupów (opcjonalnie)</label>
        <select asp-for="ShoppingListId" class="form-select" asp-items="ViewBag.ShoppingLists">
            <option value="">-- Wybierz listę --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Zapisz zgłoszenie</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
