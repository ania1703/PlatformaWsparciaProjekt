@model List<PlatformaWsparciaProjekt.ViewModels.VolunteerRatingSummaryViewModel>

<h2>Oceny wolontariuszy</h2>

@if (!Model.Any())
{
    <p>Brak ocenionych wolontariuszy.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Wolontariusz</th>
                <th>Średnia ocen</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.AverageScore</td>
                    <td>
                        <a asp-controller="Rating" asp-action="VolunteerDetails" asp-route-id="@item.VolunteerId" class="btn btn-primary">
                            Szczegóły
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
