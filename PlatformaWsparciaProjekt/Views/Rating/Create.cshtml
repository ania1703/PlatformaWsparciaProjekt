@model PlatformaWsparciaProjekt.Models.Rating
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Oceń wolontariusza";
}

<h2>Oceń wolontariusza</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Wolontariusz</label>
        <select class="form-select" asp-for="UserId" asp-items="@(new SelectList(ViewBag.Volunteers, "Id", "FirstName"))">
            <option value="">-- Wybierz --</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Ocena (1-5)</label>
        <input class="form-control" asp-for="Score" type="number" min="1" max="5" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Komentarz</label>
        <textarea class="form-control" asp-for="Comment"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz ocenę</button>
</form>
