@model PlatformaWsparciaProjekt.Models.Post

@{
    ViewData["Title"] = "Edytuj post";
}

<h2>Edytuj post</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Treść posta</label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Zmień zdjęcie (opcjonalnie)</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
