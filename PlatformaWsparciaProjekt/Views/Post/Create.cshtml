@model PlatformaWsparciaProjekt.Models.PostViewModel

@{
    ViewData["Title"] = "Utwórz post";
}

<h2>Dodaj zdjęcie z podpisem</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Treść posta</label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Zdjęcie (opcjonalnie)</label>
        <input asp-for="ImageFile" class="form-control" type="file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Dodaj</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
